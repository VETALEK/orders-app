<%= stylesheet_link_tag "forms" %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :first_name,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.text_field :first_name,
      autofocus: true,
      autocomplete: "first name",
      class:"form-control"
    %>
  </div>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :last_name,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.text_field :last_name,
      autocomplete: "last name",
      class:"form-control"
    %>
  </div>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :email,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.email_field :email,
      autocomplete: "email",
      class:"form-control"
    %>
  </div>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :password,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.password_field :password,
      autocomplete: "new-password",
      class:"form-control"
    %>
  </div>

  <% if @minimum_password_length %>
    <div
      class="
        alert
        alert-dark
        d-flex
        align-items-center
      "
      role="alert",
      style="padding-block: 6px;"
    >
      <svg
        class="
          bi
          flex-shrink-0
          me-2
          message-icon
        "
        role="img"
        aria-label="Info:"
      >
        <use xlink:href="#info-fill"/>
      </svg>
      
      <div>
        <%= @minimum_password_length %> characters minimum
      </div>
    </div>
  <% end %>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :password_confirmation,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.password_field :password_confirmation,
      autocomplete: "new-password",
      class:"form-control"
    %>
  </div>

  <div class="
    actions
    d-flex
    justify-content-end
  ">
    <%=
      f.submit "Sign up",
      class:"
        btn
        btn-dark
        mx-2
    "%>

    <%=
      link_to "Sign in",
      new_session_path(resource_name),
      class:"
        btn
        btn-outline-secondary
    "%>
  </div>
<% end %>
