<%= stylesheet_link_tag "forms" %>

<h2>Profile info</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :email,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.email_field :email,
      autofocus: true,
      autocomplete: "email",
      class:"form-control"
    %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :password,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.password_field :password,
      autocomplete: "new-password",
      class:"form-control"
    %>
  </div>
    
  <% if @minimum_password_length %>  
    <div
      class="
        alert
        alert-dark
        d-flex
        align-items-center
      "
      role="alert",
      style="padding-block: 6px;"
    >
      <svg
        class="
          bi
          flex-shrink-0
          me-2
          message-icon
        "
        role="img"
        aria-label="Info:"
      >
        <use xlink:href="#info-fill"/>
      </svg>
      
      <div>
        <%= @minimum_password_length %> characters minimum
      </div>
    </div>
  <% end %>

  <div
    class="
      alert
      alert-dark
      d-flex
      align-items-center
    "
    role="alert",
    style="padding-block: 6px;"
  >
    <svg
      class="
        bi
        flex-shrink-0
        me-2
        message-icon
      "
      role="img"
      aria-label="Info:"
    >
      <use xlink:href="#info-fill"/>
    </svg>
    
    <div>
      leave blank if you don't want to change it
    </div>
  </div>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :password_confirmation,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.password_field :password_confirmation,
      autocomplete: "new-password",
      class:"form-control"
    %>
  </div>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :current_password,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.password_field :current_password,
      autocomplete: "current-password",
      class:"form-control"
    %>
  </div>

  <div
    class="
      alert
      alert-dark
      d-flex
      align-items-center
    "
    role="alert",
    style="padding-block: 6px;"
  >
    <svg
      class="
        bi
        flex-shrink-0
        me-2
        message-icon
      "
      role="img"
      aria-label="Info:"
    >
      <use xlink:href="#info-fill"/>
    </svg>
    
    <div>
      we need your current password to confirm your changes
    </div>
  </div>

  <div class="
    actions
    d-flex
    justify-content-end
  ">
    <%=
      f.submit "Update",
      class:"
        btn
        btn-dark
        mx-2
    "%>

    <%=
      link_to "Back",
      :back,
      class:"
        btn
        btn-outline-secondary
    "%>
  </div>
<% end %>
