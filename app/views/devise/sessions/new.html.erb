<%= stylesheet_link_tag "forms" %>

<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :email,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.email_field :email,
      autofocus: true,
      autocomplete: "email",
      class:"form-control"
    %>
  </div>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :password,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.password_field :password,
      autocomplete: "current-password",
      class:"form-control"
    %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div
      class="field mb-3"
    >
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="
    actions
    d-flex
    justify-content-end
  ">
    <%=
      link_to "Sign up",
      new_registration_path(resource_name),
      class:"
        btn
        btn-outline-secondary
    "%>

    <%=
      f.submit "Sign in",
      class:"
        btn
        btn-dark
        mx-2
    "%>
  </div>
<% end %>
