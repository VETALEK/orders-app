<h1>Users:</h1>

<table class="table table-striped table-hover">
  <thead  class="table-secondary">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Username</th>
      <th scope="col">Role</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  
  <tbody class="table-group-divider">
    <tr>
      <% @users.each do |user| %>
        <th scope="row">
          <%= user.id %>
        </th>

        <td>
          <%= user.first_name %>
          <%= user.last_name %>
        </td>

        <td>
          <%= user.role %>
        </td>

        <td>
          <%= user.email %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
