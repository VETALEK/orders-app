<h1>Users</h1>

<table class="table table-striped table-hover">
  <thead  class="table-secondary">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Username</th>
      <th scope="col">Role</th>
      <th scope="col">Email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  
  <tbody class="table-group-divider">
    <% @users.each do |user| %>
      <tr>
        <th scope="row">
          <%= user.id %>
        </th>

        <td>
          <%= user.first_name %>
          <%= user.last_name %>
        </td>

        <td>
          <%= user.role %>
        </td>

        <td>
          <%= user.email %>
        </td>

        <td>
          <%=
            link_to 'Edit',
            edit_user_path(user),
            class:"
              btn
              btn-outline-secondary
              btn-sm
              d-block
          "%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
