<h1>Items</h1>

<table class="table table-striped table-hover">
  <thead  class="table-secondary">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th
        scope="col" 
        colspan=2
      />
    </tr>
  </thead>
  
  <tbody class="table-group-divider">
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>

        <td>
          <%= item.name %>
        </td>

        <td>
          <%= item.description %>
        </td>

        <td>
          <%= item.price %>
        </td>

        <td>
          <%=
            link_to 'Edit',
            edit_item_path(item),
            class:"
              btn
              btn-outline-secondary
              btn-sm
              d-block
          "%>
        </td>

        <td>
          <%=
            link_to 'Delete',
            items_delete_path(item),
            method: :delete,
            data: {confirm: "Are you sure?"},
            class:"
              btn
              btn-outline-danger
              btn-sm
              d-block
          "%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-end">
  <%=
    link_to "New item",
    new_item_path,
    class:"
      btn
      btn-dark
  "%>
</div>
