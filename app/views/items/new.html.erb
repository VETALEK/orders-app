<%= stylesheet_link_tag "forms" %>

<h1>New item</h1>

<%= form_with(model: @item) do |f| %>
  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :name,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>
    
    <%=
      f.text_field :name,
      required:true,
      class:"form-control"
    %>
  </div>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :description,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>

    <%=
      f.text_field :description,
      class:"form-control"
    %>
  </div>

  <div
    class="
      field
      input-group
      mb-3
  ">
    <%=
      f.label :price,
      class:"
        input-group-text
        bg-secondary
        text-light
        flex-grow-1
        field-label
    "%>
    
    <%=
      f.text_field :price,
      required:true,
      class:"form-control"
    %>
  </div>

  <div class="
    actions
    d-flex
    justify-content-end
  ">
    <%=
      link_to "Back to items",
      admin_items_path,
      class:"
        btn
        btn-outline-secondary
        mx-2
    "%>

    <%=
      f.submit "Create item",
      class:"
        btn
        btn-dark
    "%>
  </div>
<% end %>
